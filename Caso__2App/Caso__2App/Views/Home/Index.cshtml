@* Views/Home/Index.cshtml (MVC WEB — navega a Productos/ListarProductos) *@
@{
    ViewBag.Title = "Home";
}

<main>
    <section class="row text-center mb-5">
        <h1>Catálogo de Productos</h1>
        <p class="lead">Frontend MVC que consume el API vía AJAX.</p>
    </section>

    <div class="row text-center">
        <section class="col-md-6">
            <h2>Listado</h2>
            <p>Ver, filtrar, editar y eliminar productos (AJAX).</p>
            <p>
                <a class="btn btn-primary btn-lg"
                   href="@Url.Action("ListarProductos", "Productos")">
                    Ir a Productos &raquo;
                </a>
            </p>
        </section>

        <section class="col-md-6">
            <h2>API</h2>
            <p>Prueba los endpoints directamente (opcional).</p>
            <p>
                <a class="btn btn-outline-info btn-lg"
                   href="https://localhost:44360/swagger" target="_blank">
                    Abrir Swagger &raquo;
                </a>
            </p>
        </section>
    </div>
</main>
